@{
    ViewData["Title"] = "Payment Completed";
}

@if (ViewData["isSuccess"].ToString() == "True")
{
    <center>
        <h2>
            We appreciate your business! If you have any questions, please email
            <a href="mailto:info@techvesta.co.nz">info@techvesta.co.nz</a>.
        </h2>
        <img src="~/img/checked.svg" style="height:200px" />
    </center>
}
else
{
<center>
    <h2>The transaction has failed. PLease try in sometime</h2>
    <img src="~/img/close.svg" style="height:200px" />
</center>
}

<script>
    setTimeout(function () {
        window.location.href = '/Home/Index';
    }, 10000);
</script>